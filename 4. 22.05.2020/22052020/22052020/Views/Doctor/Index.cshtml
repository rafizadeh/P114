@model List<_22052020.Models.Doctor>
@{
    ViewBag.Title = "Index";
}

<!-- Page Title -->
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7">
                <h2>Doctors</h2>
            </div>

            <div class="col-md-6 col-lg-5">
                <ul>
                    <li><a href=@Url.Action("Index","Home")>Home</a></li>
                    <li>Doctors</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title -->
<!-- Expert Doctors -->
<section class="expert-doctors ptb-100 gray-bg pb-70">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-card">
                        <div class="thumb-img">
                            <img src="~/Public/img/doctors/@item.Photo" alt="@item.Fullname" />
                            <div class="hover-social">
                                <div class="d-table">
                                    <div class="d-tablecell">
                                        <ul>
                                            <li>
                                                <a href="@item.Linkedin">
                                                    <i class="icofont-linkedin"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@item.Facebook">
                                                    <i class="icofont-facebook"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <a href=@Url.Action("Detail","Doctor", new { id = item.Id })>
                            <div class="caption-text text-center">
                                <h3>@item.Fullname</h3>
                                <span class="designation mb-10">@item.Department.Name</span>
                                <p>
                                    @{
                                     int len = 150;
                                     @(item.Description.Length > len ? item.Description.Substring(0, len) + "..." : item.Description);
                                }
                            </p>
                        </div>
                        </a>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
<!-- Edn Expert Doctors -->
<!-- Call To Action -->
<section class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="call-to-action-text">
                    <i class="icofont-first-aid"></i>
                    <h3>Health Care Center</h3>
                    <p>if you have any Emerangcy by health problem contact this <span>No. 035 687 9514</span> or contact form</p>
                </div>
            </div>

            <div class="col-lg-3">
                <a href="#" class="default-btn">Contact Us</a>
            </div>
        </div>
    </div>
</section>
<!-- End Call To Action -->
